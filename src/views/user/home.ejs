<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/css/home-style.css" type="text/css">
    <link rel="stylesheet" href="/css/navbar-style.css" type="text/css">
    <title>Research</title>
</head>
<body>
    <%- include('./../components/navbar.ejs') %>
    <section>
        <% persons.forEach(person => { %>
            <div class="container-box">
                <div class="image">
                    <img src="http://localhost:5000/<%=  person.image %>">
                </div>
                <div class="name">
                    <h3><%= person.name %></h3>
                </div>
                <div class="workplace">
                    <p><%= person.workplace %></p>
                </div>
                <div class="contact">
                    <p><%= person.contact %></p>
                </div>
                <% if (user) { %>
                    <div class="container-btn">
                        <a class="edit-btn" href="/admin/edit/<%= person.id %>">Edit</a>
                        <form action="/admin/home/<%= person.id %>?_method=DELETE" method="POST">
                            <button class="delete-btn" type="submit">Delete</button>
                        </form>
                    </div>
                <% } %>
            </div>
        <% }) %>
    </section>
</body>
</html>